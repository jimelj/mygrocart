# Server
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://localhost:5432/mygrocart

# Redis - For caching and job queue
# Local development (use local Redis - optional)
# REDIS_URL=redis://localhost:6379

# Production (use Upstash Redis on Render - REQUIRED FOR PRODUCTION)
# Get these from https://console.upstash.com/redis after creating a database
# Format: rediss://default:YOUR_TOKEN@YOUR_ENDPOINT:PORT
UPSTASH_REDIS_REST_URL=https://your-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Redis Cache TTL Configuration (in seconds)
REDIS_TTL_PRODUCTS=3600    # 1 hour for product data
REDIS_TTL_PRICES=1800      # 30 minutes for price data

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Scraping - Phase 2
TARGET_API_KEY=your_target_api_key

# Scraping (Legacy)
ENABLE_SCHEDULED_SCRAPING=false
SCRAPE_DO_TOKEN=your_scrape_do_token
SCRAPE_DO_API_URL=https://api.scrape.do

# OpenAI (for flyer OCR with GPT-4o Mini)
OPENAI_API_KEY=your_openai_api_key_here

# Cloudinary (for flyer image storage)
# Format: cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name
