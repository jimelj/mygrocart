{
  "name": "mygrocart-backend-node",
  "version": "1.0.0",
  "description": "MyGroCart Backend API - Node.js with Express, Apollo Server, GraphQL, and Web Scraping",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon -r dotenv/config server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:scraper": "node test_scraper.js",
    "test:scraper:standalone": "node test_scraper_standalone.js",
    "test:cache": "node test_redis_caching.js",
    "scrape:shoprite": "node -e \"require('./services/ScrapingOrchestrator').scrapeShopRite().then(console.log).catch(console.error)\"",
    "scrape:target": "node -e \"const ScrapingOrchestrator = require('./services/ScrapingOrchestrator'); const orchestrator = new ScrapingOrchestrator(); orchestrator.scrapeTarget().then(console.log).catch(console.error);\"",
    "scrape:comprehensive": "node -e \"require('./services/ScrapingOrchestrator').runComprehensiveScraping().then(console.log).catch(console.error)\"",
    "scrape:status": "curl -s http://localhost:5000/api/scraping/status | jq .",
    "cache:stats": "curl -s http://localhost:5000/api/cache/stats | jq .",
    "enrich:upc": "node test_openfoodfacts.js",
    "seed:db": "node scripts/seed_database.js",
    "seed:db:test": "node scripts/seed_database.js --test",
    "seed:db:resume": "node scripts/seed_database.js --resume",
    "scrape:nightly": "node scripts/run_nightly_scraper.js",
    "scrape:nightly:tier1": "node scripts/run_nightly_scraper.js --skip-tier2 --skip-tier3 --skip-tier4",
    "scrape:nightly:tier2": "node scripts/run_nightly_scraper.js --skip-tier1 --skip-tier3 --skip-tier4",
    "scrape:nightly:tier3": "node scripts/run_nightly_scraper.js --skip-tier1 --skip-tier2 --skip-tier4",
    "scrape:nightly:tier4": "node scripts/run_nightly_scraper.js --skip-tier1 --skip-tier2 --skip-tier3",
    "scrape:nightly:test": "node scripts/run_nightly_scraper.js --skip-tier3 --skip-tier4",
    "test:nightly": "node test_nightly_scraper.js",
    "cron:setup": "bash scripts/setup_cron.sh",
    "flyer:refresh": "node scripts/weekly_flyer_refresh.js",
    "flyer:digest": "node scripts/send_daily_digest.js",
    "flyer:test": "node scripts/test_flyer_pipeline.js"
  },
  "keywords": [
    "graphql",
    "apollo",
    "express",
    "supermarket",
    "price-comparison",
    "web-scraping",
    "scrape-do",
    "upc",
    "grocery"
  ],
  "author": "MyGroCart Team",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.12.1",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "fingerprint-injector": "^2.1.77",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "openai": "^6.14.0",
    "p-limit": "^3.1.0",
    "pg": "^8.11.3",
    "playwright": "^1.56.1",
    "playwright-extra": "^4.3.6",
    "playwright-ghost": "^0.15.0",
    "playwright-with-fingerprints": "^2.3.4",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "sequelize": "^6.35.2",
    "sharp": "^0.34.5",
    "uuid": "^11.0.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mygrocart/backend"
  },
  "bugs": {
    "url": "https://github.com/mygrocart/backend/issues"
  },
  "homepage": "https://github.com/mygrocart/backend#readme"
}
